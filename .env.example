# ANAC Orchestrator Configuration
# Copia questo file come .env e modifica i valori secondo le tue configurazioni

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=anac_db
DB_USER=anac_user
DB_PASSWORD=your_password_here

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ETL Configuration
ETL_BATCH_SIZE=1000
ETL_MAX_WORKERS=4
ETL_TIMEOUT=300

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=anac_etl.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Data Processing
DATA_VALIDATION_ENABLED=true
DATA_CLEANING_ENABLED=true
DUPLICATE_DETECTION_ENABLED=true

# Performance Settings
MEMORY_LIMIT=2GB
CPU_LIMIT=4

# Security
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# External APIs (if needed)
ANAC_API_URL=https://api.anac.it
ANAC_API_KEY=your_api_key_here

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8080

# Development/Production
ENVIRONMENT=development
DEBUG=false
